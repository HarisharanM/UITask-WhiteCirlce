// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // <-- This is the important new line
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String  @id @default(cuid())
  name         String?
  email        String  @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CallBooking {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String
  description String
  createdAt   DateTime @default(now())
}
